<Page x:Class="ExchangeRates.OperationsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ExchangeRates"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OperationsPage">

    <Grid>
        <Label Content="Operation Id" HorizontalAlignment="Left" Margin="35,25,0,0" VerticalAlignment="Top"/>
        <Label Content="Operation Type" HorizontalAlignment="Left" Margin="180,25,0,0" VerticalAlignment="Top"/>
        <Label Content="User" HorizontalAlignment="Left" Margin="370,25,0,0" VerticalAlignment="Top"/>
        <Label Content="Operation Date" HorizontalAlignment="Left" Margin="520,25,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="OperationId" HorizontalAlignment="Left" Margin="120,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50"/>
        <DataGrid x:Name="dataGrid" AutoGenerateColumns="True" Margin="35,200,35,10"/>
        <Button Content="Load Table" HorizontalAlignment="Center" Margin="0,165,0,0" VerticalAlignment="Top" Click="LoadTable"/>
        <Button Content="Insert" HorizontalAlignment="Left" Margin="150,120,0,0" VerticalAlignment="Top" Click="Insert" Width="55"/>
        <Button Content="Delete" HorizontalAlignment="Center" Margin="0,120,0,0" VerticalAlignment="Top" Width="55"/>
        <Button Content="Edit" HorizontalAlignment="Right" Margin="0,120,150,0" VerticalAlignment="Top" Width="55"/>
        <ComboBox x:Name="UserCB" HorizontalAlignment="Left" Margin="420,27,0,0" VerticalAlignment="Top" Width="70"/>
        <Label Content="Currency From" HorizontalAlignment="Left" Margin="150,75,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="OperationDate" HorizontalAlignment="Left" Margin="630,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="70"/>
        <ComboBox x:Name="OperationTypeCB" HorizontalAlignment="Left" Margin="280,27,0,0" VerticalAlignment="Top" Width="70"/>
        <ComboBox x:Name="CurrencyFromCB" HorizontalAlignment="Left" Margin="245,77,0,0" VerticalAlignment="Top" Width="70"/>
        <Label Content="Currency To" HorizontalAlignment="Left" Margin="340,75,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="CurrencyToCB" HorizontalAlignment="Left" Margin="425,77,0,0" VerticalAlignment="Top" Width="70"/>
        <Label Content="Amount" HorizontalAlignment="Left" Margin="530,75,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Amount" HorizontalAlignment="Left" Margin="610,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="70"/>
    </Grid>
</Page>
